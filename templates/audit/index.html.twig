{% extends 'base.html.twig' %}

{% block title %}Audit index{% endblock %}

{% block body %}
    <h1>Audit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>AuditDate</th>
                <th>Findings</th>
                <th>Recommendations</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for audit in audits %}
            <tr>
                <td>{{ audit.id }}</td>
                <td>{{ audit.auditDate ? audit.auditDate|date('Y-m-d') : '' }}</td>
                <td>{{ audit.findings }}</td>
                <td>{{ audit.recommendations }}</td>
                <td>{{ audit.status }}</td>
                <td>
                    <a href="{{ path('app_audit_show', {'id': audit.id}) }}">show</a>
                    <a href="{{ path('app_audit_edit', {'id': audit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_audit_new') }}">Create new</a>
{% endblock %}
