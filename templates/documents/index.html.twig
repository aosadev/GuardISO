{% extends 'base.html.twig' %}

{% block title %}Documents index{% endblock %}

{% block body %}
    <h1>Documents index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>FilePath</th>
                <th>Version</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for document in documents %}
            <tr>
                <td>{{ document.id }}</td>
                <td>{{ document.title }}</td>
                <td>{{ document.description }}</td>
                <td>{{ document.filePath }}</td>
                <td>{{ document.version }}</td>
                <td>{{ document.status }}</td>
                <td>
                    <a href="{{ path('app_documents_show', {'id': document.id}) }}">show</a>
                    <a href="{{ path('app_documents_edit', {'id': document.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_documents_new') }}">Create new</a>
{% endblock %}
